@model IEnumerable<gongshangchaxun.Models.UserProfile>

@{
    ViewBag.Title = "listuser";
    Layout = "~/Views/Shared/_Layoutgl.cshtml";
}

@*<h3>企业信用查询系统——系统管理员操作：</h3>*@


<div style="border-bottom:solid 1px #b5cbe3; margin-top:30px;">
         <div style=" float:left; padding-left:5px;font-size:18px; ">系统管理员——用户管理：</div>
         <div style="float:right;">
          <a href="/admin/"><img src="/content/images/fanhui.png" style="float:right; margin-top:1px; margin-bottom:2px; margin-right:50px; cursor: pointer;border-width:0px 0px 0px 0px;height:30px;"/></a>
         </div>
         <div class="clr"></div>
     </div>

<p style="text-align:center; font-size:26px;">
    @{ using (Html.BeginForm("register", "account", FormMethod.Get))
       {
           <input type="submit" value="创建新用户" style="font-size:20px;color:black;" />

                             }
    }
      
@*     @Html.ActionLink("创建新的管理员", "register" ,"account")*@
 </p>

<table class="tb3">
    <tr>
           <th style="width:20%;" >序号</th>
           <th style="width:40%;" >姓名</th>
           <th style="width:40%;">操作</th>
                 
    </tr>
    <tbody id="abnormalListBody">
            @{int xuhao = 0; }
            
            @foreach (var item in Model) {
              <tr>
                  <td>
                     @{ xuhao=xuhao+1;
                        @xuhao; }
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.UserName)
                 </td>
                 <td>
                     @{ if (item.UserName.ToString() == "admin")
                        {
                            <div>系统管理员，不能删除！</div>
                        }
                        else
                        { 
                         @Html.ActionLink("删除", "Delete", new { id=item.UserId })
                        }                                                
                         }
                    
                 </td>
                       
                 </tr>
             }
    </tbody>

</table>